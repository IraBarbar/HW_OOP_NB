<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="400.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <StackPane prefHeight="150.0" prefWidth="200.0">
      <children>
         <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#afbecd" height="100.0" stroke="BLACK" strokeType="INSIDE" width="200.0" />
      <Text fx:id="output">
            <font>
               <Font size="18.0" />
            </font></Text>
      </children>
   </StackPane>
   <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
      <children>
         <Button mnemonicParsing="false" onAction="#num" prefHeight="50.0" prefWidth="50.0" text="7" />
         <Button mnemonicParsing="false" onAction="#num" prefHeight="50.0" prefWidth="50.0" text="8" />
         <Button mnemonicParsing="false" onAction="#num" prefHeight="50.0" prefWidth="50.0" text="9" />
         <Button mnemonicParsing="false" onAction="#processOperator" prefHeight="50.0" prefWidth="50.0" text="/" />
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </HBox>
   <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
      <children>
         <Button mnemonicParsing="false" onAction="#num" prefHeight="50.0" prefWidth="50.0" text="4" />
         <Button mnemonicParsing="false" onAction="#num" prefHeight="50.0" prefWidth="50.0" text="5" />
         <Button mnemonicParsing="false" onAction="#num" prefHeight="50.0" prefWidth="50.0" text="6" />
         <Button mnemonicParsing="false" onAction="#processOperator" prefHeight="50.0" prefWidth="50.0" text="*" />
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </HBox>
   <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
      <children>
         <Button mnemonicParsing="false" onAction="#num" prefHeight="50.0" prefWidth="50.0" text="1" />
         <Button mnemonicParsing="false" onAction="#num" prefHeight="50.0" prefWidth="50.0" text="2" />
         <Button mnemonicParsing="false" onAction="#num" prefHeight="50.0" prefWidth="50.0" text="3" />
         <Button mnemonicParsing="false" onAction="#processOperator" prefHeight="50.0" prefWidth="50.0" text="+" />
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </HBox>
   <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
      <children>
         <Button mnemonicParsing="false" onAction="#num" prefHeight="50.0" prefWidth="50.0" text="0" />
         <Button mnemonicParsing="false" onAction="#processOperator" prefHeight="50.0" prefWidth="110.0" text="=" />
         <Button mnemonicParsing="false" onAction="#processOperator" prefHeight="50.0" prefWidth="50.0" text="-" />
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </HBox>
</VBox>
